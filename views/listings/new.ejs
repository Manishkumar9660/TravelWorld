<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <br/>
    <form method="POST" action="/listings"  class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title"
         class="form-label"><b>Title</b></label>
      <input 
      id="title"
      name="listing[title]" 
      placeholder="enter title" 
      type="text" 
      class ="form-control"
      required
      />
      <div class="invalid-feedback">Title looks good!</div>
      </div>
      <div class="mb-3 flow-control">
        <label for="title"
         class="form-label"> Description</label>
        <textarea
        name="listing[description]"
        placeholder="enter description"
         class ="form-control"
         required
      ></textarea>
      
      </div >
       
      <div class="mb-3 flow-control">
        <label for="title"
         class="form-label">Image URL</label><br/>
         <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"

      />
      <div class="invalid-feedback">Image URL looks good!</div>
      </div>
      <div class="mb-3 flow-control">
        <label for="title"
         class="form-label">Image URL</label><br/>
         <input
        name="listing[image]"
        type="file"
        required
      />
      <div class="invalid-feedback">Image URL looks good!</div>
      </div>

      <div class="row">
      <div class="mb-3 col-md-6">
        <label for="title"
         class="label">Price</label><br/>
          <input name="listing[price]" placeholder="1200"  required/>
          <div class="invalid-feedback">Price looks good!</div>
      </div>
     
      <div class="mb-3 col-md-6">
        <label for="title"
         class="form-label">Country</label>
         <input name="listing[country]" placeholder="India" type="text" required/>
         
      </div>
      </div>
      <div class="mb-3">
        <label for="title"
         class="form-label">Location</label><br/>
         <input
        name="listing[location]"
        placeholder="Jaipur"
        type="text"
        class="flow-control"
        required
      />
      </div>
      <button class="btn">Add</button>
      <br/><br/>
    </form>
    </div>
  </div>
